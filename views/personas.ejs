<!DOCTYPE html>
<html>
<%- include('./head.ejs') %>

    <body>
        <%- include('./navbar.ejs') %>
        
        <div class="container mt-4">
            <h1 class="mb-4">Lista de Personas</h1>
            
            <div class="mb-3">
                <a href="/personas/agregar" class="btn btn-primary">Agregar Nueva Persona</a>
                <a href="/personas/buscar" class="btn btn-secondary">Buscar Persona</a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Oficina</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (personas && personas.length > 0) { %>
                            <% personas.forEach(persona => { %>
                                <tr>
                                    <td><%= persona.nombre %></td>
                                    <td><%= persona.email %></td>
                                    <td><%= persona.oficina_nombre || 'Sin asignar' %></td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="/personas/editar/<%= persona.id %>" 
                                               class="btn btn-warning btn-sm">Editar</a>
                                            <a href="/personas/borrar/<%= persona.id %>" 
                                               class="btn btn-danger btn-sm">Eliminar</a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center">No hay personas registradas</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>